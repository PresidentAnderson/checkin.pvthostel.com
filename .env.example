# Application Environment Variables
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/pvthostel_db"

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# JWT & Auth Configuration - REQUIRED FOR BUILD
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-min-32-chars
JWT_REFRESH_EXPIRES_IN=30d
NEXTAUTH_SECRET=your-nextauth-secret-here-min-32-chars

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM="ImarketHR <noreply@imarkethr.com>"

# Frontend & API URLs
CLIENT_URL=http://localhost:3000
API_URL=http://localhost:3000
VITE_API_BASE_URL=http://localhost:3000/api
NEXTAUTH_URL=http://localhost:3000
APP_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_DIR=./logs

# Security Headers
HELMET_ENABLED=true
CORS_ORIGIN=http://localhost:3000,http://localhost:5000

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=/api/auth/google/callback

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=/api/auth/github/callback

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_CALLBACK_URL=/api/auth/linkedin/callback

# Payment Processing (Stripe) - REQUIRED FOR BUILD
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Background Check API
BACKGROUND_CHECK_API_KEY=your-background-check-api-key
BACKGROUND_CHECK_API_URL=https://api.backgroundcheck.com

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=imarkethr-uploads

# Monitoring and Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
JAEGER_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_SERVICE_NAME=imarkethr-api

# Feature Flags
ENABLE_AI_MATCHING=true
ENABLE_VIDEO_INTERVIEWS=false
ENABLE_BACKGROUND_CHECKS=false
ENABLE_ANALYTICS_DASHBOARD=true

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7

# Background Jobs
ENABLE_BACKGROUND_JOBS=true
JOB_QUEUE_NAME=imarkethr-jobs
JOB_CONCURRENCY=5

# Compliance Settings
GDPR_ENABLED=true
DATA_RETENTION_DAYS=365
ENABLE_DATA_ENCRYPTION=true

# Performance Settings
ENABLE_CACHE=true
CACHE_TTL=3600
DATABASE_POOL_SIZE=10
REQUEST_TIMEOUT=30000

# Development Tools (disable in production)
ENABLE_SWAGGER=false
ENABLE_GRAPHQL_PLAYGROUND=false
DEBUG_SQL=false